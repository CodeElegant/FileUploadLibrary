{
	"parser": "@babel/eslint-parser",
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 11,
		"sourceType": "module",
		"requireConfigFile": false,
		"ecmaFeatures": {
			"modules": true
		},
		"babelOptions": {
			"plugins": [
				"@babel/plugin-syntax-class-properties"
			]
		}
	},
	"plugins": [
		"@babel"
	],
	"env": {
		"shared-node-browser": true,
		"browser": true,
		"node": true,
		"es6": true,
		"es2021": true
	}
}